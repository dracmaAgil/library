.container.top-buffer
  .row
    .col-xs-6.col-md-10
      %h3 User
    .col-xs-6.col-md-2
      = link_to "Create user", new_user_path
    
  .row
    .col-md-12
      -if @users.empty?
        %h4 There is no users yet
      -else
        %table.table.table-striped.table-bordered.table-hover
          %thead.thead-dark
            %tr
              %th Name
              %th Email
              %th Cellphone
              %th Actions

          %tbody
            - @users.each do |user|
              %tr
                %td= t(user.name)
                %td= user.email
                %td= user.cellphone
                %td
                  = link_to user, class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top' }, title: 'user show' do
                    %i.fa.fa-eye.bigger-130.fa-lg
                  = link_to edit_user_path(user), class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top' }, title: 'user show' do
                    %i.fa.fa-pencil.bigger-130.fa-lg
                  = link_to user_cancel_path(user), class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top', :confirm => 'Are you sure?' }, title: 'Delete user' do
                    %i.fa.fa-trash.bigger-130.fa-lg.text-danger
                  = link_to user_list_books_path(user), class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top' }, title: 'user wishlist' do
                    %i.fa.fa-list.bigger-130.fa-lg
  .row
    .col-md-12.apple_pagination
      = will_paginate @users

