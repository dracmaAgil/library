#container.top-buffer
  .row
    .col-md-4
      -if @users.empty?
        %h4 there is no users yet
      -else
        %h3 Last 5 users
        %table.table.table-striped.table-bordered.table-hover
          %thead.thead-dark
            %tr
              %th Descripci√≥n
              %th Email
              %th Cellphone

          %tbody
            - @users.each do |user|
              %tr
                %td= user.name
                %td= user.email
                %td= user.cellphone
    .col-md-5
      -if @books.empty?
        %h4 there is no books yet
      -else
        %h3 Last 5 books
        %table.table.table-striped.table-bordered.table-hover
          %thead.thead-dark
            %tr
              %th Name
              %th Author
              %th Status
              %th Category

          %tbody
            - @books.each do |book|
              %tr
                %td= book.name
                %td= book.author
                %td
                  -if book.status.nil?
                    = 'Book without status'
                  -elsif book.is_available?
                    = 'Available'
                  -else
                    = 'Not Available'
                %td
                  -if book.categories.empty?
                    = 'There is no categories asigned'
                  - else
                    %ul
                      - book.categories.each do |category|
                        %li= category.name
                
    .col-md-3
      -if @categories.empty?
        %h4 there is no categories yet
      -else
        %h3 Last 5 categories
        %table.table.table-striped.table-bordered.table-hover
          %thead.thead-dark
            %tr
              %th Name
              %th Description

          %tbody
            - @categories.each do |category|
              %tr
                %td= category.name
                %td= category.description
                

