.container.top-buffer
  .row
    .col-xs-6.col-md-10
      %h3 Categories
    .col-xs-6.col-md-2
      = link_to "Create category", new_category_path
    
  .row
    .col-md-12
      -if @categories.empty?
        %h4 There is no categories yet
      -else
        %table.table.table-striped.table-bordered.table-hover
          %thead.thead-dark
            %tr
              %th Name
              %th Description
              %th Actions

          %tbody
            - @categories.each do |category|
              %tr
                %td= t(category.name)
                %td= category.description
                %td
                  = link_to category, class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top' }, title: 'category show' do
                    %i.fa.fa-eye.bigger-130.fa-lg
                  = link_to edit_category_path(category), class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top' }, title: 'user show' do
                    %i.fa.fa-pencil.bigger-130.fa-lg
                  = link_to category_cancel_path(category), class: 'has-tooltip', data: { toggle: 'tooltip', placement: 'top', :confirm => 'Are you sure?' }, title: 'Delete category' do
                    %i.fa.fa-trash.bigger-130.fa-lg.text-danger
  .row
    .col-md-12.apple_pagination
      = will_paginate @categories

