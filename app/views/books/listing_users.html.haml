.container.top-buffer
  .row
    .col-xs-6.col-md-10
      %h3= "Book #{@book.name}"
    .col-xs-6.col-md-2
      = link_to "return", books_path, id: 'categories_index'
  .row
    .col-md-12
      = form_for @book, url: {action: 'borrowing_book'} do |form|
        = form.select :user_id, @users.collect { |u| [u.name, u.id]}, { include_blank: true }
        %br
        = form.button :submit
